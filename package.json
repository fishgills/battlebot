{
  "name": "battlebot",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@angular/**"
    ]
  },
  "dependencies": {
    "graphql": "^15.3.0",
    "graphql-request": "^4.0.0",
    "graphql-tag": "^2.12.6"
  },
  "lint-staged": {
    "packages/*/src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "@graphql-codegen/cli": "^2.6.0",
    "@graphql-codegen/introspection": "^2.1.1",
    "@graphql-codegen/typescript": "^2.4.3",
    "@graphql-codegen/typescript-apollo-angular": "^3.3.3",
    "@graphql-codegen/typescript-graphql-request": "^4.3.3",
    "@graphql-codegen/typescript-operations": "^2.3.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.1.7",
    "typescript": "~4.3.0"
  },
  "scripts": {
    "start": "yarn workspaces run start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "lint": "eslint \"packages/*/{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fishgills/battlebot.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fishgills/battlebot/issues"
  },
  "homepage": "https://github.com/fishgills/battlebot#readme"
}
