  "version": "0.2.0",
  "configurations": [
    {
      "localRoot": "${workspaceFolder}/packages/backend",
      "name": "Server",
      "port": 9230,
      "sourceMaps": true,
      "restart": true,
      // "remoteRoot": "Absolute path to the remote directory containing the program",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "localRoot": "${workspaceFolder}/packages/bot",
      "name": "Bot",
      "port": 9229,
      "restart": true,
      // "remoteRoot": "Absolute path to the remote directory containing the program",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Bot Serverless",
      "program": "${workspaceFolder}/packages/bot/node_modules/serverless/bin/serverless",
      "args": ["offline", "start", "--lambdaPort", "3000", "--noTimeout"],
      "cwd": "${workspaceFolder}/packages/bot",
      "runtimeExecutable": "node"
    }
  ]
}
