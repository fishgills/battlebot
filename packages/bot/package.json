{
  "name": "@battlebot/bot",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "DEBUG=* ts-node-dev --inspect --respawn src/index.ts",
    "start:prod": "node index.js",
    "build": "ncc build src/index.ts -m -o dist",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.33.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "~4.3.0"
  },
  "dependencies": {
    "@slack/bolt": "^3.8.1",
    "@slack/web-api": "^6.5.1",
    "debug": "^4.3.3",
    "dotenv": "^10.0.0",
    "graphql-request": "^3.7.0",
    "graphql-tag": "^2.12.6",
    "graphql": "^15.0.0",
    "slack-block-builder": "^2.4.2"
  }
}
