{
  "name": "@battlebot/bot",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "prestart": "tsc",
    "start": "concurrently --kill-others --names \"TS,NM\" -c \"bgBlue.bold,bgMagenta.bold\" \"tsc -w --preserveWatchOutput\" \"DEBUG=* nodemon --no-colors --inspect -q -w dist dist/index.js\"",
    "start:prod": "node index.js",
    "build": "ncc build src/index.ts -m -o dist",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.33.1",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "typescript": "~4.3.0"
  },
  "dependencies": {
    "@slack/bolt": "^3.9.0",
    "@slack/web-api": "^6.6.0",
    "debug": "^4.3.3",
    "dotenv": "^10.0.0",
    "graphql": "^15.0.0",
    "graphql-request": "^3.7.0",
    "graphql-tag": "^2.12.6",
    "slack-block-builder": "^2.4.2"
  }
}
