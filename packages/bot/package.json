{
  "name": "@battlebot/bot",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "DEBUG=* ts-node-dev --respawn --inspect=9230 -- src/index.ts",
    "startt": "concurrently --kill-others --names \"TS,NM\" -c \"bgBlue.bold,bgMagenta.bold\" \"tsc -w --preserveWatchOutput\" \"DEBUG=* nodemon --respawn --no-colors --inspect -q -w dist dist/index.js\"",
    "start:prod": "node index.js",
    "build": "tsc && cp -r src/lang dist/",
    "lint": "eslint . --ext .ts",
    "sta": "swagger-typescript-api -p http://localhost:3000/api-json -o ./src/swagger -n Bot.ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "devDependencies": {
    "@serverless/typescript": "^3.38.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/serverless": "^3.12.22",
    "concurrently": "^8.2.2",
    "esbuild": "^0.23.1",
    "nodemon": "^3.1.4",
    "rimraf": "^6.0.1",
    "swagger-typescript-api": "^13.0.22",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@slack/bolt": "^3.21.1",
    "@slack/oauth": "^3.0.1",
    "@types/node": "^22.5.1",
    "cross-fetch": "^4.0.0",
    "date-fns": "^3.6.0",
    "dd-trace": "^5.22.0",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "pino-http": "^10.2.0",
    "rxjs": "^7.8.1",
    "slack-block-builder": "^2.8.0",
    "winston": "^3.14.2"
  }
}
