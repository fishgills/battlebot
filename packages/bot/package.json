{
  "name": "@battlebot/bot",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "start:dev": "DEBUG=* ts-node-dev --inspect --respawn src/index.ts",
    "start:prod": "node index.js",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "devDependencies": {
    "@types/node": "^17.0.8",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@slack/bolt": "^3.8.1",
    "@slack/web-api": "^6.5.1",
    "debug": "^4.3.3",
    "dotenv": "^10.0.0",
    "graphql": "^16.2.0",
    "graphql-request": "^3.7.0",
    "graphql-tag": "^2.12.6",
    "slack-block-builder": "^2.4.2"
  }
}
