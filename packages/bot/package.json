{
  "name": "@battlebot/bot",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "DEBUG=* ts-node-dev --respawn --inspect -- src/index.ts",
    "startt": "concurrently --kill-others --names \"TS,NM\" -c \"bgBlue.bold,bgMagenta.bold\" \"tsc -w --preserveWatchOutput\" \"DEBUG=* nodemon --respawn --no-colors --inspect -q -w dist dist/index.js\"",
    "start:prod": "node index.js",
    "build": "tsc && cp -r src/lang dist/",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/jsonwebtoken": "^9.0.0",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "~4.9.4"
  },
  "dependencies": {
    "@apollo/client": "^3.7.3",
    "@slack/bolt": "^3.12.2",
    "@slack/web-api": "^6.8.0",
    "@types/node": "^18.11.18",
    "apollo-link-token-refresh": "^0.4.0",
    "bunyan": "^1.8.15",
    "bunyan-debug-stream": "^3.1.0",
    "cross-fetch": "^3.1.5",
    "date-fns": "^2.29.3",
    "dd-trace": "^3.11.0",
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.0",
    "pino-http": "^8.3.1",
    "rxjs": "^7.8.0",
    "slack-block-builder": "^2.7.2"
  }
}
