{
  "name": "@battlebot/bot",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "DEBUG=* ts-node-dev --respawn --inspect -- src/index.ts",
    "startt": "concurrently --kill-others --names \"TS,NM\" -c \"bgBlue.bold,bgMagenta.bold\" \"tsc -w --preserveWatchOutput\" \"DEBUG=* nodemon --respawn --no-colors --inspect -q -w dist dist/index.js\"",
    "start:prod": "node index.js",
    "build": "tsc && cp -r lang dist/",
    "lint": "eslint . --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "devDependencies": {
    "@types/bunyan": "^1",
    "@types/jsonwebtoken": "^8.5.8",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "~4.3.0"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@slack/bolt": "^3.10.0",
    "@slack/web-api": "^6.7.0",
    "@types/node": "^17.0.18",
    "apollo-link-token-refresh": "^0.4.0",
    "bunyan": "^1.8.15",
    "bunyan-debug-stream": "^3.0.2",
    "cross-fetch": "^3.1.5",
    "date-fns": "^2.28.0",
    "dd-trace": "^2.3.1",
    "dotenv": "^10.0.0",
    "graphql": "^15.0.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^8.5.1",
    "pino-http": "^6.6.0",
    "rxjs": "^7.5.4",
    "slack-block-builder": "^2.5.0"
  }
}
