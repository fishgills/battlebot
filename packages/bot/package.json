{
  "name": "@battlebot/bot",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "clean": "rimraf dist coverage",
    "start": "tsx watch --clear-screen=false --inspect=9230 src/index.ts | pino-pretty",
    "startt": "concurrently --kill-others --names \"TS,NM\" -c \"bgBlue.bold,bgMagenta.bold\" \"tsc -w --preserveWatchOutput\" \"DEBUG=* nodemon --respawn --no-colors --inspect -q -w dist dist/index.js\"",
    "start:prod": "node dist/index.js",
    "build": "tsup src/index.ts",
    "lint": "eslint . --ext .ts",
    "sta": "swagger-typescript-api -p http://localhost:3000/api-json -o ./src/swagger -n Bot.ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "codegen": "gql-gen --config codegen.yml"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.3.3",
    "@graphql-codegen/introspection": "^4.0.3",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-generic-sdk": "^4.0.1",
    "@serverless/typescript": "^3.38.0",
    "@tsconfig/node-lts": "^20.1.3",
    "@types/add": "^2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/serverless": "^3.12.22",
    "add": "^2.0.6",
    "esbuild": "^0.23.1",
    "graphql-codegen-typescript-common": "0.17.0",
    "nodemon": "^3.1.4",
    "pino-pretty": "^11.2.2",
    "remove": "^0.1.5",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "yarn": "^1.22.22"
  },
  "dependencies": {
    "@apollo/client": "^3.11.8",
    "@slack/bolt": "^3.21.4",
    "@slack/oauth": "^3.0.1",
    "@tsconfig/node22": "^22.0.0",
    "@types/i18next": "^13.0.0",
    "@types/node": "^22.5.1",
    "apollo-link-token-refresh": "^0.7.0",
    "axios": "^1.7.7",
    "date-fns": "^3.6.0",
    "dd-trace": "^5.22.0",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "graphql": "^16.9.0",
    "i18next": "^23.14.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.4.0",
    "pino-http": "^10.2.0",
    "rxjs": "^7.8.1",
    "slack-block-builder": "^2.8.0",
    "swagger-typescript-api": "^13.0.22"
  }
}
