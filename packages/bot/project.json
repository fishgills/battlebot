{
  "name": "bot",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/bot/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "development",
      "options": {
        "platform": "node",
        "outputPath": "dist/packages/bot",
        "format": ["cjs"],
        "bundle": true,
        "main": "packages/bot/src/index.ts",
        "tsConfig": "packages/bot/tsconfig.app.json",
        "assets": [
          {
            "input": "packages/bot/src",
            "glob": "locales/**/*.json",
            "output": "/"
          }, {
            "input": "packages/bot",
            "glob": ".env",
            "output": "/"
          }
        ],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "bot:build",
        "port": 9230,
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "bot:build:development"
        },
        "production": {
          "buildTarget": "bot:build:production"
        }
      }
    },
    "docker-build": {
      "dependsOn": ["build:production"],
      "command": "docker build -f packages/bot/Dockerfile . -t bot"
    }    
  }
}
